{
  "name": "20160824-simplifyifyreact",
  "version": "1.0.0",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "cpx": "^1.3.2",
    "fixpack": "^2.3.1",
    "http-server": "^0.9.0",
    "jade-cli": "^0.1.1",
    "jquery": "^3.1.0",
    "jscs": "^3.0.7",
    "npm-run-all": "^3.0.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "remarkable": "^1.6.2",
    "simplifyify": "^2.0.1"
  },
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "api:cpx:watch": "cpx './src/api/**/*' './dist/api' --verbose --clean --watch",
    "fixpack": "fixpack",
    "jade:build:watch": "jade ./src --out ./dist --pretty --watch",
    "jsx:build:watch": "simplifyify ./src/index.jsx --outfile ./dist/index.js --minify --debug --watch",
    "jsx:fix": "jscs ./src --fix",
    "jsx:validate": "jscs ./src",
    "serve": "http-server ./dist -p 8888 -c1 -o",
    "start": "npm-run-all -p **:watch serve",
    "test": "npm-run-all fixpack *:validate"
  }
}
